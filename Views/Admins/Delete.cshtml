@model AdminViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Admin Details</h1>

<div class="row">
    <div class="col-md-5">
        <div asp-validation-summary="All"class="text-danger"></div>
        <ul class="list-group">
            <li class="list-group-item"><b>Author Name:</b>@Model.Name</li>
            <li class="list-group-item"><b>Email:</b>@Model.Email</li>
            <li class="list-group-item"><b>User Name:</b>@Model.UserName</li>
            <li class="list-group-item"><b>Password:</b>@Model.Password</li>

        </ul>
        <div>
            Are you sure Do you want to Delete this Admin?
        </div>
        <div>
            <form asp-controller="Admins" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <a asp-controller="Admins" asp-action="Index">Back to List</a>
    </div>
</div>
